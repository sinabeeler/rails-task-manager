<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task.id) %>
      [<%= link_to "Delete", task_path(task.id), method: :delete, "data-confirm": "Are you sure?" %>]
      [<%= link_to "Edit", edit_task_path(task.id) %>]
    </li>
  <% end %>
</ul>

<p><%= link_to "Add a new task", new_task_path %></p>
